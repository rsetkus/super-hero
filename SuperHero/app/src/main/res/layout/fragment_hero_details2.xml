<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:src="@color/colorPrimary"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <lt.setkus.superhero.app.ui.widget.StateLayout
            android:id="@+id/heroDetailsStateLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:loadingLayout="@layout/state_loading"
            app:errorLayout="@layout/state_error">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TextView
                    android:id="@+id/heroName"
                    android:layout_width="320dp"
                    android:layout_height="80dp"
                    android:padding="@dimen/normal_padding"
                    android:textAppearance="@style/TextAppearance.HeroName"
                    android:background="@color/transparent_white"
                    android:layout_marginTop="120dp"
                    android:layout_marginStart="40dp"
                    android:gravity="center_horizontal|center_vertical"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Bombermenas Pasaulio nugaletojas"/>

                <TextView
                    android:id="@+id/heroDescription"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/normal_padding"
                    android:textAppearance="@style/TextAppearance.HeroDescription"
                    android:background="@color/transparent_white"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="40dp"
                    android:visibility="gone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/heroName"
                    tools:visibility="visible"
                    tools:text="Somewhere in a galaxy known as Bomber Nebula lives a creature called The Bomberman. His home planet is called surprisingly Planer Bomber."/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/comicsList"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintTop_toBottomOf="@id/heroDescription"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_comic"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </lt.setkus.superhero.app.ui.widget.StateLayout>


    </androidx.core.widget.NestedScrollView>

</FrameLayout>
