<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".app.details.HeroDetailsFragment">

        <ImageView
            android:id="@+id/headerImage"
            android:layout_width="0dp"
            android:layout_height="180dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/colorPrimary"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/heroName"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:gravity="start"
            android:padding="@dimen/normal_padding"
            android:textAppearance="@style/TextAppearance.HeroName"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerImage"
            tools:text="Bombermenas"/>

        <TextView
            android:id="@+id/heroDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/normal_padding"
            android:textAppearance="@style/TextAppearance.HeroDescription"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/heroName"
            tools:text="Somewhere in a galaxy known as Bomber Nebula lives a creature called The Bomberman. His home planet is called surprisingly Planer Bomber."/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/comicsList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/heroDescription"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_comic"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
